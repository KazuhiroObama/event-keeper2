<div class="devise_form_title">
  <h2>パスワード再設定</h2>
</div>
</br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :past }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  </br>
  <div class="actions">
    <%= f.submit "パスワード再設定のメールを送信", class: "btn btn-primary" %>
  </div>
<% end %>
</br>

<%= render "devise/shared/links" %>
</br>
